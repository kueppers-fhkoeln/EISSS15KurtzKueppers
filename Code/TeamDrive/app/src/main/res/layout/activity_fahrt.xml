<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.teamdrive.example.FahrtActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FCG vs. SSV2"
            android:id="@+id/txtFahrtEventname" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gegner"
            android:id="@+id/textView3"
            android:layout_below="@+id/txtFahrtEventname" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="50dp"
        android:layout_toStartOf="@+id/txtFahrtstadt"
        android:layout_toLeftOf="@+id/txtFahrtstadt"
        android:textStyle="bold" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="FC Gummersbach"
            android:id="@+id/txtFahrtGegener"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Datum"
            android:id="@+id/textView4"
            android:layout_marginTop="30dp" android:layout_below="@+id/textView3" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:textStyle="bold" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="23.06.2015 13:00"
            android:id="@+id/txtFahrtZeitpunkt"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Stadt"
            android:id="@+id/textView5"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textView4" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:textStyle="bold" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bergisch Born"
            android:id="@+id/txtFahrtstadt"
        android:layout_alignTop="@+id/textView5"
        android:layout_centerHorizontal="true" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Straße"
            android:id="@+id/textView6" android:layout_below="@+id/textView5" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:textStyle="bold" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bornbacher Straße 11"
            android:id="@+id/txtFahrtStrasse"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/txtFahrtstadt"
        android:layout_alignStart="@+id/txtFahrtstadt" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Treffpunkt"
            android:id="@+id/textView7" android:layout_below="@+id/textView6" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="30dp"
        android:layout_toStartOf="@+id/txtFahrtStrasse"
        android:layout_toLeftOf="@+id/txtFahrtStrasse"
        android:textStyle="bold" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="11:30"
            android:id="@+id/txtFahrtTreffpunkt"
            android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/txtFahrtStrasse"
        android:layout_alignStart="@+id/txtFahrtStrasse" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fahrer"
            android:id="@+id/btnFahrtfahrer"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtFahrtTreffpunkt"
        android:layout_toLeftOf="@+id/txtFahrtTreffpunkt" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mitfahrer"
            android:id="@+id/btnFahrtMitfahrer" android:layout_alignBottom="@+id/btnFahrtfahrer" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtFahrtstadt" />
</RelativeLayout>
